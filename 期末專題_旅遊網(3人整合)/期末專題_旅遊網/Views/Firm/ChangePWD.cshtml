@using 期末專題_旅遊網.ViewModels
@model CFirmAccountInfoViewModel

@{
    ViewBag.Title = "ChangePWD";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/cssEdit.css" />
</head>

<h2>廠商</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>密碼變更</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cFirmSN)

        <div class="form-group">
            @Html.LabelFor(model => model.cFirmName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="readonly">
                @Html.EditorFor(model => model.cFirmName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cFirmName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>新密碼</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cFirmPWD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cFirmPWD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>新密碼確認</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cFirmPWDChk, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cFirmPWDChk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "FirmList")
</div>
