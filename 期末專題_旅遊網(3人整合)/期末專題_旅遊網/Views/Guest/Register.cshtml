@using 期末專題_旅遊網.ViewModels
@model tGuestAccountInfomation
@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html style="font-size: 16px;" lang="zh-Hant">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>旅客註冊</title>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="~/css/旅客註冊.css" media="screen">
    <script class="u-script" type="text/javascript" src="~/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="~/js/nicepage.js" defer=""></script>
    <meta name="generator" content="Nicepage 3.26.0, nicepage.com">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i">



    <script type="application/ld+json">
        {
                "@@context": "http://schema.org",
                "@@type": "Organization",
                "name": "Site1",
                "logo": "~/img/default-logo.png"
        }</script>
    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="旅客註冊">
    <meta property="og:description" content="">
    <meta property="og:type" content="website">
</head>
<body class="u-body">
    <section class="u-align-center u-clearfix u-image u-section-1" id="carousel_8d95">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-expanded-width-xs u-palette-3-base u-shape u-shape-rectangle u-shape-1"></div>
            <h2 class="u-text u-text-body-alt-color u-text-1">nature calling</h2>
            <h3 class="u-text u-text-body-alt-color u-text-2">Silence and freedom.</h3>
        </div>
    </section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="u-align-center u-clearfix u-section-2" id="carousel_ad71">
            <div class="u-clearfix u-sheet u-sheet-1">
                <h2 class="u-text u-text-1">註冊帳號</h2>
                <div class="u-form u-form-1">
                    <form action="/Guest/Register" method="POST" class="u-clearfix u-form-spacing-15 u-form-vertical u-inner-form" style="padding: 0;" source="custom" name="form">
                        <div class="u-form-email u-form-group u-form-group-1">
                            <label for="email-f2a8" class="u-label u-label-1">E-mail(帳號)</label>

                            <input type="email" placeholder="請輸入電子郵件" id="email-f2a8" name="cGuestEmail" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">

                        </div>
                        <div class="u-form-group u-form-name u-form-group-2">
                            <label for="name-f2a8" class="u-label u-label-2">密碼</label>
                            <input type="text" placeholder="請輸入6-12位密碼(必須包含一個數字與一個英文字母)" id="name-f2a8" name="cGuestPWDHash" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-form-group u-form-name u-form-group-3">
                            <label for="name-1ec8" class="u-label u-label-3">再輸入一次密碼</label>
                            <input type="text" placeholder="再輸入一次密碼" id="name-1ec8" name="cGuestPWDSalt" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-form-date u-form-group u-form-partition-factor-2 u-form-group-4">
                            <label for="date-4441" class="u-label u-label-4">出生年月日</label>
                            <input type="date" placeholder="MM/DD/YYYY" id="date-4441" name="cGuestBirth" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-form-group u-form-partition-factor-2 u-form-radiobutton u-form-group-5">
                            <div class="u-form-radio-button-wrapper">
                                <input type="radio" name="cGuestGender" value="男生" required="required">
                                <label class="u-label" for="radiobutton">男生</label>
                                <br>
                                <input type="radio" name="cGuestGender" value="女生" required="required">
                                <label class="u-label" for="radiobutton">女生</label>
                                <br>
                            </div>
                        </div>
                        <div class="u-form-group u-form-phone u-form-group-6">
                            <label for="phone-447e" class="u-label u-label-7">手機號碼</label>
                            <input type="tel" pattern="\+?\d{0,2}[\s\(\-]?([0-9]{3})[\s\)\-]?([\s\-]?)([0-9]{3})[\s\-]?([0-9]{2})[\s\-]?([0-9]{2})" placeholder="請輸入手機號碼(EX.0912345678)" id="phone-447e" name="cGuestPhoneNumber" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-form-group u-form-partition-factor-2 u-form-group-7">
                            <label for="text-19f0" class="u-label u-label-8">身分證字號(外籍人士請輸入護照號碼或居留證號)</label>
                            <input type="text" id="text-19f0" name="cGuestID" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle">
                        </div>
                        <div class="u-form-group u-form-partition-factor-2 u-form-radiobutton u-form-group-8">
                            <div class="u-form-radio-button-wrapper">
                                <input type="radio" name="cGuestCitizenship" value="本國籍" required="required">
                                <label class="u-label" for="radiobutton">本國籍</label>
                                <br>
                                <input type="radio" name="cGuestCitizenship" value="非本國籍" required="required">
                                <label class="u-label" for="radiobutton">非本國籍</label>
                                <br>
                            </div>
                        </div>
                        <div class="u-form-group u-form-name u-form-partition-factor-2 u-form-group-10">
                            <label for="name-c7df" class="u-label u-label-12">中文姓氏</label>
                            <input type="text" id="name-c7df" name="cGuestLastName" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-form-group u-form-name u-form-partition-factor-2 u-form-group-9">
                            <label for="name-2051" class="u-label u-label-11">中文名</label>
                            <input type="text" id="name-2051" name="cGuestFirstName" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>

                        <div class="u-form-group u-form-name u-form-partition-factor-2 u-form-group-11">
                            <label for="name-f510" class="u-label u-label-13">英文姓氏</label>
                            <input type="text" id="name-f510" name="cGuestLastNameEN" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="" placeholder="請輸入同護照英文名字">
                        </div>
                        <div class="u-form-group u-form-name u-form-partition-factor-2 u-form-group-12">
                            <label for="name-911d" class="u-label u-label-14">英文名</label>
                            <input type="text" placeholder="請輸入同護照英文名字" id="name-911d" name="cGuestFirstNameEN" class="u-border-2 u-border-grey-75 u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle" required="">
                        </div>
                        <div class="u-align-center u-form-group u-form-submit u-form-group-13">
                            <a href="#" class="u-black u-btn u-btn-rectangle u-btn-submit u-button-style u-btn-1">
                                送出<br>
                            </a>
                            <input type="submit" value="submit" class="u-form-control-hidden">
                        </div>
                        <div class="u-form-send-message u-form-send-success"> Thank you! Your message has been sent. </div>
                        <div class="u-form-send-error u-form-send-message"> Unable to send your message. Please fix errors then try again. </div>
                        <input type="hidden" value="" name="recaptchaResponse">
                    </form>
                </div>
            </div>
        </section>
    }


    <section class="u-backlink u-clearfix u-grey-80">
        <a class="u-link" href="https://nicepage.com/website-templates" target="_blank">
            <span>Website Templates</span>
        </a>
        <p class="u-text">
            <span>created with</span>
        </p>
        <a class="u-link" href="https://nicepage.com/" target="_blank">
            <span>Website Builder Software</span>
        </a>.
    </section>
</body>
</html>