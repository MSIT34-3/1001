            @Html.ValidationMessageFor(model => model.cHotelCreationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cHotelPhone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cHotelPhone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cHotelPhone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cHotelType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("cHotelType", (List<SelectListItem>)ViewBag.HotelType, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.cHotelType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cHotelBarrierfree, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
