        <label id="lblImage"> 請選擇圖檔:</label>
        <input type="file" name="image" id="image" accept="image/">
    </div>
    <div>
        預覽:<br />
        <img class="pre_img" id="preview_img" src="#" />
    </div>
    :<br />
    :<br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="送出" class="btn btn-default" />
            <input type="button" name="back" value="回上一頁" class="btn btn-danger" onclick="javascript: history.back()" />
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
