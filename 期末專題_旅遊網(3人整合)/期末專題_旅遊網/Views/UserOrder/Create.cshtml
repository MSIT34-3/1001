@model 期末專案0924.ViewModels.CUserOrderViewModel

@{
    ViewBag.Title = "Create";
}

<h2>新增訂單</h2>

<head>
    
    <style>
        .cOrderNotes {
            display: inline;
        }
    </style>
</head>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<input type="hidden" name="cGuestSN" value="@Model.cGuestSN" />
<input type="hidden" name="cHotelRoomTypeSN" value="@Model.cHotelRoomTypeSN" />
<div class="form-horizontal">
    <h4>填寫訂單資料</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
    <div class="form-group">
        @Html.LabelFor(model => model.cCheckInDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cCheckInDate, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.cCheckInDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cCheckOutDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cCheckOutDate, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.cCheckOutDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cStayDays, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cStayDays, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.cStayDays, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.cOrderNotes, htmlAttributes: new { @class = "control-label col-md-2 cOrderNotes" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cOrderNotes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cOrderNotes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cOrderPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cOrderPrice, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.cOrderPrice, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="輸入信用卡資料" class="btn btn-default" />
            <input type="button" name="back" value="返回上一步" class="btn btn-danger" onclick="javascript: history.back()" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("回訂單列表", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
